.page-course-study{data: {course_id: @course.id}}
  .play-frame
    .course-content.col-md-9
      .player
      .actions
        %a.intro-button.btn.btn-default{tableindex: 0, role: 'button', data: {toggle: 'popover', placement: 'top', content: '功能描述：本交易通过客户号、客户名称、证件类型加证件号码为条件查询客户账号。客户操作的步骤：无。需要授权的步骤：无', trigger: 'focus'}}
          %span.glyphicon.glyphicon-info-sign
          本章概要
        %a.share-button.btn.btn-default
          %span.glyphicon.glyphicon-share
          分享
        %a.bucketerize{data: {rel: "bucketerize", bucketerize: {mode: 'standard', resource_type: 'KcCourses::Course', resource_id: @course.id}}}
          .unhas
            %button.btn.btn-default 
              %span.glyphicon.glyphicon-heart-empty
              收藏
          .has
            %button.btn.btn-info
              %span.glyphicon.glyphicon-heart-empty
              已收藏
        %a.btn.btn-default.test{href: (read_bank_course_path)} 增加进度
      .clearfix
    .sidebar.col-md-3
      %h3 章节目录

      = render_cell :bank_course, :study_chapters, course: @course

    .clearfix
